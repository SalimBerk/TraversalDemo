@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Görsel</th>
        <th>Düzenle</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{
                count = count + 1;
            }
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><img src="@item.Image" class="rounded-circle" height="50px;" /></td>
            <td><a href="/Guide/EditGuide/@item.GuidId" class="btn btn-outline-info">Düzenle</a></td>

        </tr>
        
    }

</table>

<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Girişi</a>

