@using TraversalCoreDemo.CQRS.Commands.GuideCommands;
@model CreateGuideCommand
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Ekleme Sayfası</h1>

<form method="Post">
    
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Rehber Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br
    <label>Rehber Görseli</label>
    <input type="text" class="form-control" asp-for="Image" />
    <br
    <label>Rehber İnstagram Görseli</label>
    <input type="text" class="form-control" asp-for="InstagramUrl" />
    <br />
    <label>Rehber Twitter Görseli</label>
    <input type="text" class="form-control" asp-for="TwitterUrl" />
    <br />
    <button class="btn btn-outline-primary">Rehber Ekle</button>

</form>


