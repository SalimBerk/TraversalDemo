@model TraversalCoreDemo.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Traversal Misafir Kayıt Ekranı</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- LINEARICONS -->
	<link rel="stylesheet" href="~/colorlib-regform-26/fonts/linearicons/style.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/colorlib-regform-26/css/style.css">
</head>

<body>

	<div class="wrapper">
		<div class="inner">
			<img src="~/colorlib-regform-26/images/image-1.png" alt="" class="image-1">
			<form method="post">
				<h3>Yeni Hesap</h3>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input asp-for="Name" type="text" class="form-control" placeholder="Adınız">
					
				</div>
				<span asp-validation-for="Name"></span>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input asp-for="Surname" type="text" class="form-control" placeholder="Soyadınız">
					
				</div>
				<span asp-validation-for="Surname"></span>
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input asp-for="Mail" type="text" class="form-control" placeholder="Mail Adresiniz">
					
				</div>
				<span asp-validation-for="Mail"></span>
				
				<div class="form-holder">
					<span class="lnr lnr-phone-handset"></span>
					<input asp-for="UserName" type="text" class="form-control" placeholder="Kullanıcı Adınız">
					
				</div>
				<span asp-validation-for="UserName"></span>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input asp-for="Password" type="password" class="form-control" placeholder="Şifreniz">
		
				</div>
				<span asp-validation-for="Password"></span>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifre Tekrar">
					
				</div>
				<span asp-validation-for="ConfirmPassword"></span>
				<button>
					<span>Kayıt Ol</span>
				</button>

				<div style="color:red;" asp-validation-summary="ModelOnly">

				</div>

			</form>
			<img src="~/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
		</div>

	</div>

	<script src="~/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
	<script src="~/colorlib-regform-26/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
